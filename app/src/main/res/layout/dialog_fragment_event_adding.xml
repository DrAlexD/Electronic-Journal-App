<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eventModuleTextAdding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="@string/module_text"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/eventModuleAdding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:entries="@array/modules"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eventTypeTextAdding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="@string/event_type_text"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/eventTypeAdding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:entries="@array/event_types"
            android:textSize="20sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/eventStartDateAdding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:hint="@string/event_start_date_text"
        android:inputType="date"
        android:maxLength="10"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/eventDeadlineDateAdding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:hint="@string/event_deadline_date_text"
        android:inputType="date"
        android:maxLength="10"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/eventMinPointsAdding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:hint="@string/min_points_text"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/eventMaxPointsAdding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:hint="@string/max_points_text"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="20sp" />
</LinearLayout>